{
  "compilerOptions": {
    "target": "es2017",
    "lib": [],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@infra/*": [
        "src/shared/infra/*"
      ],
      "@errors/*": [
        "src/shared/infra/errors/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@root/*": [
        "./"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "tests/**/*.ts"
  ]
}